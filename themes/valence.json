{
  "name": "Valence",
  "colors": {
    // Synthwave '84 colors
    "editor.background": "#2b213a",
    "editor.foreground": "#f3f3f3",
    "editor.selectionBackground": "#6328b2",
    "editor.lineHighlightBackground": "#3f3243",
    "editorCursor.foreground": "#fad000",

    // Hyper.is colors
    "activityBar.background": "#2c2c2c",
    "activityBar.foreground": "#ffffff",
    "sideBar.background": "#1d1d1d",
    "sideBar.foreground": "#f0f0f0",
    "panel.background": "#1d1d1d",
    "panel.foreground": "#f0f0f0",
    "tab.activeBackground": "#333333",
    "tab.activeForeground": "#ffffff",
    "tab.inactiveBackground": "#2c2c2c",
    "tab.inactiveForeground": "#f0f0f0",
    "terminal.foreground": "#f0f0f0",
    "terminal.background": "#1d1d1d",
    "terminalCursor.foreground": "#fad000"
  },
  "tokenColors": [
    // Token color definitions
    {
      "scope": "comment",
      "settings": {
        "fontStyle": "italic",
        "foreground": "#6c6783"
      }
    },
    {
      "scope": "keyword",
      "settings": {
        "foreground": "#ff8b39"
      }
    },
    // Add more token colors as needed
  ],
  "semanticTokenColors": {
    // Semantic token color definitions
  },
  "overrides": {
    // Additional overrides if necessary
  },
  "editorCursor": "block",
  "editor.fontFamily": "Menlo, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.lineHeight": 24,
  "editor.letterSpacing": 0.5,
  "editor.wordWrap": "on",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "editor.cursorBlinking": "smooth",
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/*.js": {
      "when": "$(basename).ts"
    }
  }
}
